<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.addmeal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AddMeal">


        <activity android:name=".login"
            android:exported="false"
            android:label="Log In">

        </activity>
        <activity android:name=".signup"
            android:exported="true"
            android:label="Sign Up">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PasswordActivity"
            android:exported="false"
            android:label="Password">

        </activity>

        <activity android:name=".ResetActivity"
            android:exported="false"
            android:label="Reset">

        </activity>


        <activity
            android:name=".View_list"
            android:exported="true"
            android:label="View List">

        </activity>
        <activity
            android:name=".Update"
            android:exported="true"
            android:label="Update Meal Plan"
            android:parentActivityName=".Add">



        </activity>
        <activity
            android:name=".Add"
            android:exported="true"
            android:label="ADD Device">



        </activity>
    </application>

</manifest>